---
import { BaseTitle, BaseText, BaseCard, BaseContainer } from "@components/index"

interface Props {
	title: string
	text: string
	items: any
	class?: string
}

const { class: className, title, text, items } = Astro.props
---

<BaseContainer class={className}>
	<div class="cards">
		<div class="cards__intro">
			<BaseTitle text={title} Tag="h3" />
			<BaseText text={text} />
		</div>

		<div class="cards__list">
			{
				items.map((item) => (
					<BaseCard image={item.image} text={item.text} button={item.button} />
				))
			}
		</div>
	</div>
</BaseContainer>

<style scoped lang="scss">
	.cards {
		display: flex;
		flex-direction: column;
		gap: var(--space-64);
		padding-block: var(--space-64);

		&__intro {
			display: flex;
			flex-direction: column;
			gap: var(--space-16);
			max-width: 37.5rem;
		}

		&__list {
			display: flex;
			gap: var(--space-16);
			justify-content: space-between;
		}
	}
</style>
