---
import { Title, Text, Card } from "@components/index"

interface Props {
	title: string
	text: string
	cards: any
	class?: string
}

const { class: className, title, text, cards } = Astro.props
---

<div class:list={["cards", className]}>
	<div class="cards__intro">
		<Title text={title} Tag="h2" />

		<Text text={text} />
	</div>

	<ul class="cards__list">
		{
			cards.map((item) => (
				<li class="cards__list-item">
					<Card
						icon={item.icon}
						title={item.title}
						text={item.text}
						button={item.button}
					/>
				</li>
			))
		}
	</ul>
</div>

<style is:global lang="scss">
	.cards {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-block: var(--space-96);

		&__intro {
			display: flex;
			flex-direction: column;
			gap: var(--space-32);
			text-align: center;
			max-width: 37.5rem;
			margin-bottom: var(--space-64);
		}

		&__list {
			display: flex;
			gap: var(--space-48);
		}

		&__list-item {
			&:nth-child(2) {
				margin-top: var(--space-32);
			}

			&:nth-child(3) {
				margin-top: var(--space-64);
			}
		}
	}
</style>
