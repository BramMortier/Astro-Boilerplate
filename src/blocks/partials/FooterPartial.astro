---
import { socials } from "@config/global/socials"
import { footer } from "@config/global/footer"
import { Icon, Navigation, SocialLink } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<footer class:list={["footer", className]}>
	<div class="footer__left">
		<Icon name={footer.logo} class="c-icon--asset" />

		<Navigation />
	</div>

	<ul class="footer__right">
		{
			socials.links.map((link) => (
				<li class="c-navigation__social-link">
					<SocialLink
						href={link.href}
						icon={link.icon}
						iconSize={24}
					/>
				</li>
			))
		}
	</ul>
</footer>

<style is:global lang="scss">
	@use "@styles/utils" as *;

	.footer {
		--footer-bg: var(--scheme-base);

		background-color: var(--footer-bg);

		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--space-48);
		padding-block: var(--space-32);

		@include min-width("tablet") {
			justify-content: space-between;
			flex-direction: row;
		}

		&__left {
			display: flex;
			flex-direction: column;
			gap: var(--space-48);

			.c-navigation {
				justify-content: center;

				&__links {
					flex-direction: column;
					gap: var(--space-32);

					@include min-width("tablet") {
						flex-direction: row;
					}
				}
			}

			@include min-width("tablet") {
				gap: var(--space-64);
				flex-direction: row;
			}
		}

		&__right {
			display: flex;
			gap: var(--space-32);
		}
	}
</style>
