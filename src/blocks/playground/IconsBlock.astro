---
import { Title, Icon } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<section id="playground-icons" class:list={["playground-icons", className]}>
	<Title text="Icons & graphics" Tag="h3" />

	<div class="playground-icons__content">
		<div class="playground-icons__group">
			<Icon name="opera" size={48} />
			<Icon name="chrome" size={48} />
			<Icon name="firefox" size={48} />

			<Icon name="arrow" size={24} />
			<Icon name="facebook" size={24} />
			<Icon name="close" size={24} />
			<Icon name="hamburger" size={24} />
			<Icon name="twitter" size={24} />

			<Icon name="error" size={24} />
		</div>
	</div>
</section>

<style is:global lang="scss">
	.playground-icons {
		--playground-bg: var(--scheme-base);
		--playground-border: var(--scheme-subtle);
		--playground-color: var(--scheme-contrast);

		background-color: var(--playground-bg);
		border: 1px solid var(--playground-border);
		color: var(--playground-color);

		display: flex;
		flex-direction: column;
		gap: var(--space-16);
		margin: var(--space-24);
		padding: var(--space-16) var(--space-24) var(--space-24);

		&__content {
			gap: var(--space-32);
			display: flex;
			flex-wrap: wrap;
		}

		&__group {
			display: flex;
			gap: var(--space-16);
		}
	}
</style>
