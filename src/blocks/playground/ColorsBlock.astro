---
import { Title } from "@components/index"

const colorPalette = [
	[
		{ name: "--clr-white", value: "hsl(0, 0%, 100%)" },
		{ name: "--clr-grayish-blue", value: "hsl(229, 8%, 60%)" }
	],
	[
		{ name: "--clr-soft-blue", value: "hsl(231, 69%, 60%)" },
		{ name: "--clr-very-dark-blue", value: "hsl(229, 31%, 21%)" },
		{ name: "--clr-soft-red", value: "hsl(0, 94%, 66%)" }
	]
]
---

<section id="playground-colors" class="playground-colors">
	<Title text="Color palette" Tag="h3" />

	<div class="playground-colors__content">
		{
			colorPalette.map((group) => (
				<div class="playground-colors__group">
					{group.map((color) => (
						<div
							class="playground-colors__group-swatch"
							style={{
								backgroundColor: color.value,
								border:
									color.value === "hsl(0, 0%, 100%)"
										? "1px solid var(--clr-grayish-blue)"
										: "none"
							}}
						/>
					))}
				</div>
			))
		}
	</div>
</section>

<style is:global lang="scss">
	.playground-colors {
		display: flex;
		gap: var(--space-16);
		flex-direction: column;
		margin: var(--space-24);
		padding: var(--space-16) var(--space-24) var(--space-24);
		border: 1px solid var(--clr-grayish-blue);

		&__content {
			display: flex;
			flex-direction: column;
			gap: var(--space-8);
		}

		&__group {
			display: flex;
			flex-wrap: wrap;
			gap: var(--space-8);
		}

		&__group-swatch {
			min-width: 80px;
			height: 200px;
			flex-grow: 1;
		}
	}
</style>
