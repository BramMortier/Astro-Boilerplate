---
import { socials } from "@config/global/socials"
import { navigation } from "@config/global/navigation"
import { BaseNavigation, BaseImage } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<header class:list={["header container", className]}>
	<BaseImage
		src={navigation.logo}
		class="c-picture--cover"
		alt={`Site logo`}
		sizes={`(max-width: 768px) 100vw, 20vw`}
	/>

	<BaseNavigation navLinks={navigation.links} socialLinks={socials.links} />
</header>

<style scoped lang="scss">
	.header {
		display: flex;
		justify-content: space-between;

		padding-block: var(--space-16);

		.c-picture__image {
			max-width: 8.75rem;
			height: auto;
		}
	}
</style>
