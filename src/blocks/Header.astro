---
import { socials } from "@config/global/socials"
import { navigation } from "@config/global/navigation"
import { BaseNavigation, BaseImage, BaseContainer } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<BaseContainer Tag="header" class={className}>
	<div class="header">
		<BaseImage
			src={navigation.logo}
			class="c-picture--cover"
			alt={`Site logo`}
			sizes={`(max-width: 768px) 100vw, 20vw`}
		/>

		<BaseNavigation navLinks={navigation.links} socialLinks={socials.links} />
	</div>
</BaseContainer>

<style scoped lang="scss">
	.header {
		display: flex;
		justify-content: space-between;

		padding-block: var(--space-16);

		.c-picture__image {
			max-width: 8.75rem;
			height: auto;
		}
	}
</style>
