---
import "@styles/index.scss"

import { PlaygroundLayout } from "@layouts/index"
import {
	ButtonsBlock,
	LinksBlock,
	TypographyBlock,
	IconsBlock,
	MediaBlock,
	ColorsBlock,
	NumbersBlock,
	CardsBlock,
	SplitsBlock,
	NavigationBlock
} from "@blocks/playground/index"
---

<PlaygroundLayout
	title="Playground"
	description="A showcase of all reusable components and their variants."
>
	<ColorsBlock />

	<ButtonsBlock />
	<ButtonsBlock class="scheme-dark" />

	<LinksBlock />
	<LinksBlock class="scheme-dark" />

	<NavigationBlock />
	<NavigationBlock class="scheme-dark" />

	<IconsBlock />
	<IconsBlock class="scheme-dark" />

	<TypographyBlock />
	<TypographyBlock class="scheme-dark" />

	<NumbersBlock />
	<NumbersBlock class="scheme-dark" />

	<MediaBlock />
	<MediaBlock class="scheme-dark" />

	<CardsBlock />
	<CardsBlock class="scheme-dark" />

	<SplitsBlock />
	<SplitsBlock class="scheme-dark" />
</PlaygroundLayout>
