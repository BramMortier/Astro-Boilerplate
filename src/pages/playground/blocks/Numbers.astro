---
import BaseNumber from "@components/BaseNumber.astro";
import BaseTitle from "@components/BaseTitle.astro";
---

<section class="playground-numbers">
    <BaseTitle text="Numbers / Statistics" Tag="h4" />

    <div class="playground-numbers__content">
        <div class="playground-numbers__basic">
            <BaseNumber number="80%"/>
            <BaseNumber number="12.000"/>
            <BaseNumber number="+2,85%"/>
            <BaseNumber number="777"/>
        </div>
    
        <div class="playground-numbers__basic">
            <BaseNumber number="+10.000" label="tons"/>
            <BaseNumber number="478.000" label="inhabitants"/>
            <BaseNumber number="800" label="participants"/>
            <BaseNumber number="-1.987" label="eur"/>
        </div>
    </div>
</section>

<style scoped lang="scss">
    .playground-numbers {
        display: flex;
        flex-direction: column;
        gap: var(--space-8);
        margin: var(--space-24);
        
        &__content {
            display: flex;
            gap: var(--space-96);
            padding: var(--space-24);
            border: 1px solid var(--clr-grey-200);
        }

        &__basic, &__complex {
            display: flex;
            flex-direction: column;
            gap: var(--space-32);
        }
    }
</style>