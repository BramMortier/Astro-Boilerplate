---
import BaseImage from "@components/BaseImage.astro";

import buttons from "@assets/images/playground/buttons.png";

const playgroundBlocks = ["buttons", "cards", "colors", "icons", "typography", "media", "numbers"]
---

<section class="playground-filters">
    {playgroundBlocks.map(block => (
        <div class="playground-filters__option">
            <BaseImage
                src={buttons}
                class="c-image--cover"
                alt="This is the first example image" 
                sizes={`(max-width: 768px) 100vw, 33vw`}
            />
        </div>   
    ))}
</section>

<style scoped lang="scss">
    .playground-filters {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-16);
        margin: var(--space-24);
    }
</style>

