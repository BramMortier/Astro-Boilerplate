---
import { BaseTitle, BaseIcon } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<section id="playground-icons" class:list={["playground-icons", className]}>
	<BaseTitle text="Icons & graphics" Tag="h4" />

	<div class="playground-icons__content">
		<div class="playground-icons__group">
			<BaseIcon name="arrow" size={20} />
			<BaseIcon name="arrow" size={20} rotation={90} />
			<BaseIcon name="arrow" size={20} rotation={180} />
			<BaseIcon name="arrow" size={20} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="chevron" size={20} />
			<BaseIcon name="chevron" size={20} rotation={90} />
			<BaseIcon name="chevron" size={20} rotation={180} />
			<BaseIcon name="chevron" size={20} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="arrow-rounded" size={20} />
			<BaseIcon name="arrow-rounded" size={20} rotation={90} />
			<BaseIcon name="arrow-rounded" size={20} rotation={180} />
			<BaseIcon name="arrow-rounded" size={20} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="chevron-rounded" size={20} />
			<BaseIcon name="chevron-rounded" size={20} rotation={90} />
			<BaseIcon name="chevron-rounded" size={20} rotation={180} />
			<BaseIcon name="chevron-rounded" size={20} rotation={270} />
		</div>
	</div>
</section>

<style scoped lang="scss">
	.playground-icons {
		--playground-bg: var(--scheme-base);
		--playground-border: var(--scheme-accent);
		--playground-color: var(--scheme-contrast);

		background-color: var(--playground-bg);
		border: 1px solid var(--playground-border);
		color: var(--playground-color);

		display: flex;
		flex-direction: column;
		gap: var(--space-16);
		margin: var(--space-24);
		padding: var(--space-16) var(--space-24) var(--space-24);

		&__content {
			gap: var(--space-48);
			display: flex;
			flex-wrap: wrap;
		}

		&__group {
			display: flex;
			gap: var(--space-16);
		}
	}
</style>
