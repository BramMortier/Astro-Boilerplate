---
import { BaseTitle, BaseIcon } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<section id="playground-icons" class:list={["playground-icons", className]}>
	<BaseTitle text="Icons & graphics" Tag="h4" />

	<div class="playground-icons__content">
		<div class="playground-icons__group">
			<BaseIcon name="arrow" size={24} />
			<BaseIcon name="arrow" size={24} rotation={90} />
			<BaseIcon name="arrow" size={24} rotation={180} />
			<BaseIcon name="arrow" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="chevron" size={24} />
			<BaseIcon name="chevron" size={24} rotation={90} />
			<BaseIcon name="chevron" size={24} rotation={180} />
			<BaseIcon name="chevron" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="arrow-rounded" size={24} />
			<BaseIcon name="arrow-rounded" size={24} rotation={90} />
			<BaseIcon name="arrow-rounded" size={24} rotation={180} />
			<BaseIcon name="arrow-rounded" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="chevron-rounded" size={24} />
			<BaseIcon name="chevron-rounded" size={24} rotation={90} />
			<BaseIcon name="chevron-rounded" size={24} rotation={180} />
			<BaseIcon name="chevron-rounded" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="circle-arrow" size={24} />
			<BaseIcon name="circle-arrow" size={24} rotation={90} />
			<BaseIcon name="circle-arrow" size={24} rotation={180} />
			<BaseIcon name="circle-arrow" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="circle-arrow-rounded" size={24} />
			<BaseIcon name="circle-arrow-rounded" size={24} rotation={90} />
			<BaseIcon name="circle-arrow-rounded" size={24} rotation={180} />
			<BaseIcon name="circle-arrow-rounded" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="diagonal-arrow" size={24} />
			<BaseIcon name="diagonal-arrow" size={24} rotation={90} />
			<BaseIcon name="diagonal-arrow" size={24} rotation={180} />
			<BaseIcon name="diagonal-arrow" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="diagonal-arrow-rounded" size={24} />
			<BaseIcon name="diagonal-arrow-rounded" size={24} rotation={90} />
			<BaseIcon name="diagonal-arrow-rounded" size={24} rotation={180} />
			<BaseIcon name="diagonal-arrow-rounded" size={24} rotation={270} />
		</div>

		<div class="playground-icons__group">
			<BaseIcon name="discord" size={24} />
			<BaseIcon name="facebook" size={24} />
			<BaseIcon name="frontend-mentor" size={24} />
			<BaseIcon name="github" size={24} />
			<BaseIcon name="instagram" size={24} />
			<BaseIcon name="linkedin" size={24} />
			<BaseIcon name="mail" size={24} />
			<BaseIcon name="messenger" size={24} />
			<BaseIcon name="phone" size={24} />
			<BaseIcon name="pinterest" size={24} />
			<BaseIcon name="reddit" size={24} />
			<BaseIcon name="smartphone" size={24} />
			<BaseIcon name="snapchat" size={24} />
			<BaseIcon name="spotify" size={24} />
			<BaseIcon name="twitch" size={24} />
			<BaseIcon name="whatsapp" size={24} />
			<BaseIcon name="x" size={24} />
			<BaseIcon name="youtube" size={24} />
		</div>
	</div>
</section>

<style scoped lang="scss">
	.playground-icons {
		--playground-bg: var(--scheme-base);
		--playground-border: var(--scheme-accent);
		--playground-color: var(--scheme-contrast);

		background-color: var(--playground-bg);
		border: 1px solid var(--playground-border);
		color: var(--playground-color);

		display: flex;
		flex-direction: column;
		gap: var(--space-16);
		margin: var(--space-24);
		padding: var(--space-16) var(--space-24) var(--space-24);

		&__content {
			gap: var(--space-32);
			display: flex;
			flex-wrap: wrap;
		}

		&__group {
			display: flex;
			gap: var(--space-16);
		}
	}
</style>
