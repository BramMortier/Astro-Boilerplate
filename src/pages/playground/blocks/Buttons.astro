---
import { BaseTitle, BaseIcon, BaseButton } from "@components/index";
---

<section id="playground-buttons" class="playground-buttons">
    <BaseTitle text="Buttons" Tag="h4"/>

    <div class="playground-buttons__content">
        <div class="playground-buttons__basic">
            <BaseButton>Primary button</BaseButton>
            <BaseButton class="c-button--secondary">Secondary button</BaseButton>
            <BaseButton class="c-button--secondary" disabled>Disabled</BaseButton>
            <BaseButton class="c-button--tertiary">Tertiary button</BaseButton>
        </div>
    
        <div class="playground-buttons__complex">
            <BaseButton>
                Next page
                <BaseIcon name="arrow" />
            </BaseButton>
    
            <BaseButton class="c-button--secondary">
                Continue
                <BaseIcon name="chevron" size={12} />
            </BaseButton>
    
            <BaseButton class="c-button--secondary" disabled>
                Send message
                <BaseIcon name="arrow"/>
            </BaseButton>
    
            <BaseButton class="c-button--tertiary">
                <BaseIcon name="chevron" rotation={180}  size={12}/>
                Navigate
                <BaseIcon name="chevron"  size={12}/>
            </BaseButton>
        </div>
    </div>
</section>

<style scoped lang="scss">
    .playground-buttons {
        display: flex;
        flex-direction: column;
        gap: var(--space-16);
        margin: var(--space-24);
        border: 1px solid var(--clr-grey-200);
        padding: var(--space-16) var(--space-24) var(--space-24);

        
        &__content {
            display: flex;
            flex-direction: column;
            gap: var(--space-16);
        }
        
        &__basic, &__complex {
            display: flex;
            gap: var(--space-16);
        }
    }
</style>