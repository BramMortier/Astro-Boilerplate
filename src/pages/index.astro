---
import "../styles/index.scss";

import Button from "@components/Button.astro";
import Icon from "@components/Icon.astro";
import Title from "@components/Title.astro";
import Img from "@components/Img.astro";

import example1 from "@assets/images/example-1.png";
import example2 from "@assets/images/example-2.png";
import example3 from "@assets/images/example-3.png";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro</title>
    </head>
    <body>
        <main>
            <div>
                <Button>Primary button</Button>
                <Button class="c-button--secondary">Secondary button</Button>
                <Button class="c-button--secondary" disabled>Disabled</Button>
                <Button class="c-button--tertiary">Tertiary button</Button>
            </div>
            
            <div>
                <Button>
                    Next page
                    <Icon name="arrow" />
                </Button>

                <Button class="c-button--secondary">
                    Continue
                    <Icon name="chevron" size={12} />
                </Button>

                <Button class="c-button--secondary" disabled>
                    Send message
                    <Icon name="arrow"/>
                </Button>

                <Button class="c-button--tertiary">
                    <Icon name="chevron" rotation={180}  size={12}/>
                    Navigate
                    <Icon name="chevron"  size={12}/>
                </Button>
            </div>

            <div>
                <Icon name="arrow" size={20} />
                <Icon name="arrow" size={20} rotation={90}/>
                <Icon name="arrow" size={20} rotation={180}/>
                <Icon name="arrow" size={20} rotation={270}/>

                <Icon name="chevron" size={20} />
                <Icon name="chevron" size={20} rotation={90}/>
                <Icon name="chevron" size={20} rotation={180}/>
                <Icon name="chevron" size={20} rotation={270}/>
            </div>

            <div class="col">
                <Title Tag="h1" text="This is an example heading 1"/>
                <Title Tag="h2" text="This is an example heading 2"/>
                <Title Tag="h3" text="This is an example heading 3"/>
                <Title Tag="h4" text="This is an example heading 4"/>
                <Title Tag="h5" text="This is an example heading 5"/>
                <Title Tag="h6" text="This is an example heading 6"/>
            </div>

            <div>
                <Img 
                    src={example1} 
                    alt="This is the first example image" 
                    sizes={`(max-width: 768px) 100vw, 33vw`}
                />
                <Img 
                    src={example2} 
                    alt="This is the second example image" 
                    sizes={`(max-width: 768px) 100vw, 33vw`}
                />
                <Img 
                    src={example3} 
                    alt="This is the third example image" 
                    sizes={`(max-width: 768px) 100vw, 33vw`}
                />
            </div>
        </main>
    </body>
</html>

<style scoped lang="scss">
    main {
        padding: var(--space-16);
    }

    div {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;

        &.col {
            flex-direction: column;
        }
    }
</style>

