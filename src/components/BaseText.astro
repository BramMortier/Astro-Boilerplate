---
interface Props  {
    Tag?: string;
    text: string;
    class?: string;
}

const { text, Tag = "p", class: className } = Astro.props;
---

<Tag class:list={["c-text", className]}>
    {text}
</Tag>

<style scoped lang="scss">
    .c-text {
        --text-color: var(--scheme-contrast);

        color: var(--text-color);
    }
</style>