---
import { Icon, Title, Text, Button } from "@components/index"

interface Props {
	icon?: string
	title?: string
	text?: string
	button?: any
	class?: string
}

const { title, text, button, icon, class: className } = Astro.props
---

<article class:list={["c-card", className]}>
	<div class="c-card__top">
		{icon && <Icon name={icon} size={100} />}

		<div class="c-card__info scheme-default">
			{title && <Title text={title} Tag="h3" />}

			{text && <Text text={text} />}
		</div>
	</div>

	<Icon name="bg-dots" class="c-icon--asset" />

	<div class="c-card__cta">
		{button && <Button>{button.text}</Button>}
	</div>
</article>

<style is:global lang="scss">
	.c-card {
		--card-bg: var(--clr-white);

		background-color: var(--card-bg);
		border-radius: var(--border-radius-15);

		&__top {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: var(--space-24);
			padding: var(--space-32) var(--space-24);
		}

		&__info {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: var(--space-8);
		}

		&__cta {
			display: flex;
			padding: var(--space-24);

			.c-button {
				width: 100%;
			}
		}
	}
</style>
