---
import { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"a"> {
	href: string
	class?: string
}

const { href, class: className } = Astro.props
---

<a href={href} class:list={["c-link", className]}>
	<slot />
</a>

<style is:global lang="scss">
	.c-link {
		--link-color: var(--scheme-contrast);
		--link-underline-color: var(--scheme-contrast);

		color: var(--link-color);
		text-decoration: none;

		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: var(--space-12);

		font-family: var(--font-primary);
		font-size: var(--fs-20);

		&::after {
			position: absolute;
			content: "";
			bottom: -0.1rem;
			left: 0;
			height: 1px;
			width: 0;
			background-color: var(--link-underline-color);
			transition: all ease-out 0.15s;
		}

		&:hover {
			&::after {
				width: 100%;
			}
		}
	}
</style>
