---
import {
	Arrow,
	ArrowRounded,
	Chevron,
	ChevronRounded,
	CircleArrow,
	CircleArrowRounded,
	DiagonalArrow,
	DiagonalArrowRounded,
	Discord,
	Facebook,
	FrontendMentor,
	Github,
	Instagram,
	Linkedin,
	Mail,
	Messenger,
	Phone,
	Pinterest,
	Reddit,
	Smartphone,
	Snapchat,
	Spotify,
	Twitch,
	Whatsapp,
	X,
	Youtube
} from "@assets/icons/index"

interface Props {
	name: string
	class?: string
	rotation?: number
	size?: number
}

const { name, class: className, rotation, size = 16 } = Astro.props

const iconMap = {
	arrow: Arrow,
	"arrow-rounded": ArrowRounded,
	chevron: Chevron,
	"chevron-rounded": ChevronRounded,
	"circle-arrow": CircleArrow,
	"circle-arrow-rounded": CircleArrowRounded,
	"diagonal-arrow": DiagonalArrow,
	"diagonal-arrow-rounded": DiagonalArrowRounded,
	discord: Discord,
	facebook: Facebook,
	"frontend-mentor": FrontendMentor,
	github: Github,
	instagram: Instagram,
	linkedin: Linkedin,
	mail: Mail,
	messenger: Messenger,
	phone: Phone,
	pinterest: Pinterest,
	reddit: Reddit,
	smartphone: Smartphone,
	snapchat: Snapchat,
	spotify: Spotify,
	twitch: Twitch,
	whatsapp: Whatsapp,
	x: X,
	youtube: Youtube
}

const IconComponent = iconMap[name]
---

<div class:list={["c-icon", className]}>
	<IconComponent />
</div>

<style
	is:global
	lang="scss"
	define:vars={{ iconSize: `${size}px`, rotation: `${rotation}deg` }}
>
	.c-icon {
		display: flex;
		justify-self: center;
		align-items: center;
		width: var(--iconSize);
		height: var(--iconSize);
		transform: rotate(var(--rotation));
	}
</style>
