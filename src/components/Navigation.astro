---
import { navigation } from "@config/global/navigation"

import { Link } from "@components/index"

interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<nav class:list={["c-navigation", className]}>
	<ul class="c-navigation__links">
		{
			navigation.links.map((link) => (
				<li class="c-navigation__link">
					<Link href={link.href}>{link.text}</Link>
				</li>
			))
		}
	</ul>
</nav>

<style is:global lang="scss">
	.c-navigation {
		display: flex;
		align-items: center;
		gap: var(--space-48);

		&__links {
			display: flex;
			gap: var(--space-64);
		}
	}
</style>
