---
import { Icon } from "@components/index"

interface Props {
	icon: string
	href: string
	iconSize?: number
	class?: string
}

const { class: className, href, icon, iconSize } = Astro.props
---

<a href={href} class:list={["c-social-link", className]}>
	<Icon name={icon} size={iconSize} />
</a>

<style is:global lang="scss">
	.c-social-link {
		--social-link-color: var(--scheme-base);

		color: var(--social-link-color);

		display: flex;
		justify-content: center;
		align-items: center;
		transition: color ease-out 0.15s;

		&:hover {
			.c-icon {
				color: var(--scheme-accent-alt);
			}
		}
	}
</style>
