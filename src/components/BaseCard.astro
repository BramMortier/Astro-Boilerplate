---
import { BaseImage, BaseTitle, BaseText, BaseButton } from "@components/index"

interface Props {
	image?: ImageMetadata
	title?: string
	text?: string
	button?: any
}

const { title, text, button, image } = Astro.props
---

<article class="c-card">
	{
		image && (
			<BaseImage
				src={image}
				alt="alt text"
				class="c-picture--cover"
				sizes={`(max-width: 768px) 100vw, 33vw`}
			/>
		)
	}

	{title && <BaseTitle text={title} Tag="h4" />}

	{text && <BaseText text={text} />}

	{button && <BaseButton>{button.text}</BaseButton>}
</article>

<style scoped lang="scss">
	.c-card {
		--card-bg: transparent;
		--card-border: var(--scheme-contrast);

		background-color: var(--card-bg);
		border: 1px solid var(--card-border);

		display: flex;
		flex-direction: column;
		gap: var(--space-16);

		padding: var(--space-16);
		max-width: 350px;
		width: 100%;
		height: fit-content;

		.c-picture__image {
			height: 200px;
		}
	}
</style>
