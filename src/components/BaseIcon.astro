--- 
import { Arrow, ArrowRounded, Chevron, ChevronRounded } from "@assets/icons/index";

interface Props {
    name: string;
    class?: string;
    rotation?: number;
    size?: number;
}

const { name, class: className, rotation, size = 16 } = Astro.props;

const iconMap = {
    arrow: Arrow,
    "arrow-rounded": ArrowRounded,
    chevron: Chevron,
    "chevron-rounded": ChevronRounded,
};

const IconComponent = iconMap[name];
---

<div class:list={["c-icon", className]}>
    <IconComponent />
</div>

<style scoped lang="scss" define:vars={{ iconSize: `${size}px`, rotation: `${rotation}deg` }}>
    .c-icon {
        --icon-color: var(--scheme-contrast);

        color: var(--icon-color);
        
        display: flex;
        justify-self: center;
        align-items: center;
        width: var(--iconSize);
        height: var(--iconSize);
        transform: rotate(var(--rotation));
    }
</style>